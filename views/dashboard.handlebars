<section id="dashboardPage">
        <h2 class="sectionHead">Dashboard</h2>
        {{#if blogs}}
          {{#each blogs as |blog| }}
            <section id="blogPost">
              <a href="/blog">
                <div class="sectionHead blogTitleAndTime" id="blogTitleAndTime">
                      <h2>{{blog.title}}</h2>
                      <p>Posted by: {{blog.author}} and {{blog.created_date}}</p>
                    </div>
                    <div class="blogTextArea" id="blogTextArea">
                      <p>{{blog.content}}</p>
                    </div>
                    <button><a href="./partials/blog-details">{{> blog-details}}</a></button>
                    <button><a href="./edit-blog">Edit the blog</a></button>
                    <button>Delete</button>
              </a>        
            </section>
          {{/each}}
        {{/if}}
        <div class="flex">
          <button class="btn newPostBtn"><a href="/create-blog"></a>+ New Post</button>
        </div>
</section>
