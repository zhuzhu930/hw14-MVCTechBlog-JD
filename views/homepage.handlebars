{{!-- Loop over each blog object --}}
{{#each blogs as |blog| }}
  <section id="blogPost">
    <div class="sectionHead blogTitleAndTime" id="blogTitleAndTime">
            <h2>{{blog.title}}</h2>
            <p>Posted by: {{blog.user.username}} on {{blog.createdAt}}</p>
          </div>
          <a href="/blogs/{{id}}">
          <div class="blogTextArea singleBlog" id="blogTextArea">
            <p>{{blog.content}}</p>
          </div>
    </a>        
  </section>
{{/each}}
